<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>menze.bdeak.net</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/static/style.css">
</head>
<body>
  <div class="canteens">
    {% for canteen in canteens %}
      <div class="canteen">
        {% if canteen[1]['camera_active'] %}
          <a href="{{ canteen[1]['camera_snapshot'] }}">
            <img src="{{ canteen[1]['camera_snapshot'] }}" class="canteen__camera-snapshot">
          </a>
        {% else %}
          <img src="/static/static.gif" class="canteen__camera-snapshot">
        {% endif %}
        
        <h2 class="canteen__name">{{canteen[1]["name"]}}</h2>

        {% for meal in canteen[1]["menu"] %}
          <h3 class="canteen__meal__name">
            {{ meal["name"] }} ({{ meal["from"] }}&rarr;{{ meal["till"] }})
          </h3>
          <ul class="canteen__meal__dishes">
            {% for dish in meal["dishes"] %}
              <li class="canteen__meal__dish">{{dish}}</li>
            {% endfor %}
          </ul>
        {% else %}
          <div class="canteen__error-message">Jelovnik nije postavljen</div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</body>
</html> 
